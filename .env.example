# DrCrop Configuration
# Environment variables for the AI Crop Disease Detection application

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Model Configuration
MODEL_PATH=./models/trained_model.h5
MODEL_INPUT_SIZE=224
MODEL_CONFIDENCE_THRESHOLD=0.7
MODEL_BATCH_SIZE=32

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,webp
MAX_BATCH_SIZE=10

# Database Configuration
DATABASE_PATH=./database/disease_info.json
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_DIR=./backups

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=./logs/drcrop.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE"]
CORS_ALLOW_HEADERS=["*"]

# Performance Configuration
GPU_ENABLED=false
GPU_MEMORY_LIMIT=2048  # MB
CPU_THREADS=4

# Monitoring Configuration
MONITORING_ENABLED=false
METRICS_ENDPOINT=/metrics
HEALTH_CHECK_ENDPOINT=/health

# Development Configuration
DEBUG=false
RELOAD_ON_CHANGE=true
API_DOCS_ENABLED=true

# Production Configuration
WORKERS_PER_CORE=1
MAX_WORKERS=8
KEEP_ALIVE=2

# Cache Configuration
CACHE_ENABLED=false
CACHE_TTL=3600  # seconds
REDIS_URL=redis://localhost:6379

# Email Configuration (for notifications)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=
EMAIL_ENABLED=false